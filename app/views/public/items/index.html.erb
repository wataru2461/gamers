<div class="container m-5">
  <div class="row">
    <div class="col-lg-12">
      <h3>商品一覧</h3>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3 border-bottom border-primary">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.image, size: "200x150", class: "mt-4" %></br>
            <% end %>
            <%= item.name %></br>
            ¥<%= item.price %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>