<div class="row justify-content-center">
  <div class="col-md-8 offset-md-1">
    <h5 class="m-4">注文履歴詳細</h5>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <table class="table table-borderless table-sm">
        <tbody>
          <tr>
            <td class="font-weight-bold">注文情報</td>
            <td></td>
          </tr>
          <tr>
            <td class="border-bottom border-primary">注文日</td>
            <td class="border-bottom border-primary"><%= @order.created_at %></td>
          </tr>
          <tr>
            <td class="border-bottom border-primary">配送先</td>
            <td class="border-bottom border-primary">
              <%= @order.address %></br>
              <%= current_customer.last_name + current_customer.first_name %>
            </td>
          </tr>
          <tr>
            <td class="border-bottom border-primary">支払方法</td>
            <td class="border-bottom border-primary"><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td class="border-bottom border-primary">ステータス</td>
            <td class="border-bottom border-primary"><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
      <table class="table table-borderless table-sm">
        <thead>
          <tr>
            <th>注文内容</th>
          </tr>
          <tr class="border-bottom border-primary">
            <th>商品</th>
            <th>単価</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @order.order_details.each do |order_detail| %>
        <tbody>
          <tr class="border-bottom border-primary">
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.subtotal %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-lg-4">
      <table class="table table-borderless table-sm">
        <tbody class="border-bottom border-primary">
          <tr class="border-bottom border-primary">
            <td>請求情報</td>
            <td></td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td><%= @order.billing_amount %></td>
          </tr>
          <tr>
            <td>送料</td>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td><%= @order.billing_amount + 800 %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>