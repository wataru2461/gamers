<div class="row justify-content-center">
  <div class="col-md-8 offset-md-1">
    <h5 class="m-4">注文履歴一覧</h5>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <table class="table table-borderless table-sm">
        <thead>
          <tr class="bg-primary text-white">
            <th class="col-lg-2">注文日</th>
            <th class="col-lg-3">配送先</th>
            <th class="col-lg-3">注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <% if order.customer == current_customer %>
              <tr class="border-bottom border-primary">
                <td class="text-left align-middle"><%= order.created_at %></td>
                <td class="text-left align-middle">
                  <%= order.address %></br>
                  <%= order.name %>
                </td>
                <td class="text-left align-middle">
                  <% order.order_details.each do |order_detail| %>
                    <%= order_detail.item.name %><br />
                  <% end %>
                </td>
                <td class="text-left align-middle">¥<%= order.billing_amount.to_i + 800 %>（送料込）</td>
                <td class="text-left align-middle"><%= order.status_i18n %></td>
                <td class="text-left align-middle">
                <%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-success align-middle"%>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
