<div class="container">
  <div class="row justify-content-center">
    <h1 class="m-5">
      ようこそ
      <strong class="font-weight-bold">
      <%= @customer.last_name + @customer.first_name %>
      </strong>
      さん
    </h1>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-7">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="border-secondary border-bottom"><%= label :email, "メールアドレス" %></td>
            <td class="border-secondary border-bottom"><%= @customer.email %></td>
          </tr>
          <tr>
            <td class="border-secondary border-bottom"><%= label :kana_name, "カナ" %></td>
            <td class="border-secondary border-bottom"><%= @customer.last_name_kana + @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td class="border-secondary border-bottom"><%= label :postal_code, "郵便番号" %></td>
            <td class="border-secondary border-bottom"><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="border-secondary border-bottom"><%= label :address, "住所" %></td>
            <td class="border-secondary border-bottom"><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="border-secondary border-bottom"><%= label :telephone_number, "電話番号" %></td>
            <td class="border-secondary border-bottom"><%= @customer.telephone_number %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>