<div class="row justify-content-center">
  <p class="display-4 m-3">
    〜ようこそ
    <strong class="font-weight-bold">
      Gmaers
    </strong>
    へ〜
  </p>
</div>

<div class="container m-3">
  <div class="row">
    <div class="col-lg-4">
      
    </div>
    <div class="col-lg-8">
      <h3>新着商品</h3>
      <div class="container">
        <div class="row">
          <% @items.each do |item| %>
            <div class="col-3">
              <%= link_to public_item_path(item.id) do %>
                <%= image_tag item.image, size: "200x150" %>
              <% end %>
              <%= item.name %>
              <%= item.price %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
