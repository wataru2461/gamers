<div class="row justify-content-center">
  <div class="col-md-8 offset-md-1">
    <h5 class="m-4">商品編集</h5>
  </div>
</div>
    
    
<div class="container m-5">
  <div class="row justify-content-center">
    <div class="col-md-8 offset-md-1">
      <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :item_image, "商品画像" %></td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td><%= f.label :item_name, "商品名" %></td>
            <td><%= f.text_field :name, :size=>"30" %></td>
          </tr>
          <tr>
            <td><%= f.label :item_introduction, "商品説明" %></td>
            <td><%= f.text_area :introduction, :size=>"30" %></td>
          </tr>
          <tr>
            <td><%= f.label :item_genre, "ジャンル" %></td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %></td>
          </tr>
          <tr>
            <td><%= f.label :item_price, "税抜価格" %></td>
            <td><%= f.text_field :price, :size=>"30" %>円</td>
          </tr>
          <% if @item.show_os? %>
            <tr>
              <td><%= f.label :item_os, "OS" %></td>
              <td><%= f.text_field :os, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_cpu? %>
            <tr>
              <td><%= f.label :item_cpu, "CPU" %></td>
              <td><%= f.text_field :cpu, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_graphics? %>
            <tr>
              <td><%= f.label :item_graphics, "グラフィック" %></td>
              <td><%= f.text_field :graphics, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_memory? %>
            <tr>
              <td><%= f.label :item_memory, "メモリ" %></td>
              <td><%= f.text_field :memory, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_storage? %>
            <tr>
              <td><%= f.label :item_storage, "ストレージ" %></td>
              <td><%= f.text_field :storage, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_connection? %>
            <tr>
              <td><%= f.label :item_connection, "接続" %></td>
              <td><%= f.text_field :connection, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_resolution? %>
            <tr>
              <td><%= f.label :item_resolution, "解像度" %></td>
              <td><%= f.text_field :resolution, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_polling_rate? %>
            <tr>
              <td><%= f.label :item_polling_rate, "ポーリングレート" %></td>
              <td><%= f.text_field :polling_rate, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_size? %>
            <tr>
              <td><%= f.label :item_size, "サイズ" %></td>
              <td><%= f.text_field :size, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_memory_bus? %>
            <tr>
              <td><%= f.label :item_memory_bus, "メモリーバス" %></td>
              <td><%= f.text_field :memory_bus, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_memory_type? %>
            <tr>
              <td><%= f.label :item_memory_type, "メモリータイプ" %></td>
              <td><%= f.text_field :memory_type, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_core_clock? %>
            <tr>
              <td><%= f.label :item_core_clock, "コアクロック" %></td>
              <td><%= f.text_field :core_clock, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_memory_clock? %>
            <tr>
              <td><%= f.label :item_memory_clock, "メモリークロック" %></td>
              <td><%= f.text_field :memory_clock, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_monitor_output? %>
            <tr>
              <td><%= f.label :item_monitor_output, "モニター出力" %></td>
              <td><%= f.text_field :monitor_output, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_chip? %>
            <tr>
              <td><%= f.label :item_chip, "チップ" %></td>
              <td><%= f.text_field :chip, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_response_speed? %>
            <tr>
              <td><%= f.label :item_response_speed, "反応速度" %></td>
              <td><%= f.text_field :response_speed, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_refresh_rate? %>
            <tr>
              <td><%= f.label :item_refresh_rate, "リフレッシュレート" %></td>
              <td><%= f.text_field :refresh_rate, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_input_terminal? %>
            <tr>
              <td><%= f.label :item_input_terminal, "入力端子" %></td>
              <td><%= f.text_field :input_terminal, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_key_layout? %>
            <tr>
              <td><%= f.label :item_key_layout, "キーレイアウト" %></td>
              <td><%= f.text_field :key_layout, :size=>"30" %></td>
            </tr>
          <% end %>
          <% if @item.show_key_switch? %>
            <tr>
              <td><%= f.label :item_key_switch, "キースイッチ" %></td>
              <td><%= f.text_field :key_switch, :size=>"30" %></td>
            </tr>
          <% end %>
          <tr>
            <td><%= f.label :item_quote_source, "引用元URL" %></td>
            <td><%= f.text_field :quote_source, :size=>"30" %></td>
          </tr>
          <tr>
            <td><%= f.label :sales_status, "販売ステータス" %></td>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中", class: "text-active" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "販売停止中", class: "text-active" %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="row justify-content-center">
        <%= f.submit '変更を保存', class: "btn btn-sm btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
